<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCE4EC">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pf"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/gs1"
        android:layout_gravity="center_horizontal"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:contentDescription="Upload Store Image"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="#FCE4EC">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameText"
            android:hint="Store Name"
            android:inputType="textPersonName"
            android:singleLine="true"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addText"
            android:hint="Store Address"
            android:inputType="textPostalAddress"
            android:singleLine="true"
            app:met_floatingLabel="highlight" />

        <io.apptik.widget.multiselectspinner.MultiSelectSpinner
            android:id="@+id/multiselectSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme"
            android:layout_marginTop="20dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desText"
            android:hint="Store Description"
            android:inputType="textMultiLine"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="150"/>

        <com.rey.material.widget.Button
            android:text="UPDATE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/btnnext"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
